# Environment Configuration
# Copy this file to .env and fill in your values

# Hugging Face Token (required for downloading models)
HUGGINGFACE_TOKEN=your_huggingface_token_here

# Weights & Biases (optional, for experiment tracking)
WANDB_API_KEY=your_wandb_api_key_here
WANDB_PROJECT=nupo-ai-local
WANDB_ENTITY=your_wandb_entity_here

# OpenAI API (optional, for evaluation comparisons)
OPENAI_API_KEY=your_openai_api_key_here

# Model and Data Paths
MODEL_CACHE_DIR=./models/cache
DATA_DIR=./data
LOGS_DIR=./logs

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Security
API_KEY=your_secure_api_key_here

# Database Configuration (if using persistent vector store)
VECTOR_DB_PATH=./data/vector_db
CHROMA_PERSIST_DIRECTORY=./data/chroma_db

# Training Configuration
CUDA_VISIBLE_DEVICES=0
PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:128

